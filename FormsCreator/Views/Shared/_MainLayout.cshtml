@using FormsCreator.Core.Enums
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@ViewBag.MetaDescription">
    <meta name="robots" content="noindex,nofollow">

    <title>@ViewBag.Title | FormCraft</title>

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/main/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/main/css/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/main/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/main/css/owl.theme.default.min.css">
    <link href="~/main/css/main-theme.css" rel="stylesheet" asp-append-version="true">
    <!-- SPECIFIC PAGE CSS/JS -->
    @await RenderSectionAsync("Styles", false)
    @* TemplateMo 584 Pod Talk

    https://templatemo.com/tm-584-pod-talk *@
</head>

<body>
    <main>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand me-lg-5 me-0" asp-controller="Home" asp-action="Index">
                    <img src="~/main/images/formcraft.png" class="logo-image img-fluid" alt="FormCraft">
                </a>

                <form enctype="application/x-www-form-urlencoded" asp-controller="Template" asp-action="Templates" method="get" class="custom-form search-form flex-fill me-3" role="search">
                    <div class="input-group input-group-lg">
                        <input name="text" type="search" class="form-control" id="text" placeholder="@WebResources.MainNavBarSearchText" aria-label="Search/Buscar">

                        <button type="submit" class="form-control" id="submit-search">
                            <i class="bi-search"></i>
                        </button>
                    </div>
                </form>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@WebResources.MainNavBarHomeName</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="templatesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@WebResources.MainNavbarTemplatesText</a>

                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="templatesDropdown">
                                <li><a class="dropdown-item" asp-controller="Template" asp-action="Templates">@WebResources.MainNavbarTemplatesList</a></li>

                                <li><a class="dropdown-item" asp-controller="Template" asp-action="MyTemplates">@WebResources.MainNavbarMyTemplates</a></li>

                                <li><a class="dropdown-item" asp-controller="Template" asp-action="Create">@WebResources.MainNavbarCreateTemplate</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <button class="nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @WebResources.MainNavbarLang
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-lang="@SupportedLang.en_US">English</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-lang="@SupportedLang.es_MX">Español</a></li>
                                </ul>
                            </div>
                        </li>
                        <partial name="_MainLoginPartial" />
                        <li class="nav-item">
                            <label class="nav-link form-switch form-check-reverse" for="changeMode">
                                <input class="form-check-input" type="checkbox" id="changeMode">
                                @WebResources.ChangeThemeText
                            </label>
                        </li>
                    </ul>              
                </div>
            </div>
        </nav>
        @RenderBody()
    </main>
    @await RenderSectionAsync("ExtraElements", false)
    <partial name="_JiraFormPartial" />
    <footer class="site-footer">
        <div class="container pt-5">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 col-12">
                    <a class="navbar-brand" href="index.html">
                        <img src="~/main/images/formcraft-v2.png" class="logo-image img-fluid" alt="FormCraft">
                    </a>
                </div>

                <div class="col-lg-7 col-md-9 col-12">
                    <ul class="site-footer-links">
                        <li class="site-footer-link-item">
                            <a asp-controller="Home" asp-action="Index" class="site-footer-link">@WebResources.MainNavBarHomeName</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a asp-controller="Template" asp-action="Templates" class="site-footer-link">@WebResources.MainNavbarTemplatesText</a>
                        </li>

                        @* <li class="site-footer-link-item">
                            <a data-bs-toggle="modal" data-bs-target="#jiraForm" href="javascript:void(0)" class="site-footer-link">@WebResources.CreateTicketJiraText</a>
                        </li> *@
                    </ul>
                </div>

                <div class="col-lg-3 col-12">
                    <p class="copyright-text mb-0">
                        Copyright © @DateTimeOffset.UtcNow.Year FormCraft
                        @* <br><br>
                        Design: <a rel="nofollow" href="https://templatemo.com/page/1" target="_parent">TemplateMo</a></p> *@
                </div>
            </div>
        </div>
    </footer>
    <!-- JAVASCRIPT FILES -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/main/js/bootstrap.bundle.min.js"></script>
    <script src="~/main/js/owl.carousel.min.js"></script>
    <script src="~/main/js/change-theme.js"></script>
    <script src="~/main/js/custom.js" asp-append-version="true"></script>
    <script src="~/lib/jira-request.js" asp-append-version="true"></script>
    <script type="text/javascript">
        (function () {
            const stickyOffset = 170;
            const navbar = document.querySelector('.navbar');

            window.addEventListener('scroll', function () {
                if (window.scrollY > stickyOffset) {
                    navbar.classList.add("sticky");
                }
                else {
                    navbar.classList.remove("sticky");
                }
            });
        })();
    </script>
    <!-- SPECIFIC PAGE JAVASCRIPT FILES -->
    @await RenderSectionAsync("Scripts", false)
</body>
</html>